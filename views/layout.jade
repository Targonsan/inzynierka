doctype html
mixin item(title,url)
  li
    a(href=url class=path==url ? 'active':'')=title


html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  span=path
  nav
    ul
      +item('Storna główna','/')
      +item('Aktalnosci','/news')
      +item('Quiz','/quiz')
      +item('Admin','/admin')
        
    block content
