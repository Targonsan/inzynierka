extends layout

block content
  h1= title
  if errors.errors !== undefined
    each message in errors.errors
       p(class='notactive')=message
  form(method='post')
    p
        label Login
        input(type='text' name='login' value=body.login)
    p 
        label Hasło
        input(type='password' name='password' value=body.password)
    p 
        label Powtórz Hasło 
        input(type='password' name='password2' value=body.password)
    p
        label Podpis/iniciały
        input(type="text" name='signature' value=body.signature)
    p
        input(type="submit" value='Rejestruj')
